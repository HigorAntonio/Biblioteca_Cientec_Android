<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_fragment_book"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre este livro"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/fr_sobre_este_livro_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição não disponível"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_fragment_book"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados do Livro"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Título Original"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Editora"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Edição"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Páginas"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ISBN"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Idioma"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Gêneros"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_original_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Título Original"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nome da editora"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_edition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="edição"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_num_pages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="xxxxxxxxxxxxx"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_language"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Português"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/fr_sobre_este_livro_genres"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Gênero1 / Gênero2"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>